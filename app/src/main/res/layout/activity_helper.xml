<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhongbang.sxb.HelperActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@color/yellowLand"
        >
        <ImageView
            android:id="@+id/img_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:src="@mipmap/help_head" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_head"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="服务商"/>
        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="帮助"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDE4ED"
        android:layout_below="@+id/relativeLayout1"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_help01"
            style="@style/linearLayout_help">
            <ImageView
                style="@style/imageView_help"
                android:src="@mipmap/hepl01"/>
           <TextView
               style="@style/textView_help"
               android:text="关于我们"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_help02"
            style="@style/linearLayout_help">
            <ImageView
                style="@style/imageView_help"
                android:src="@mipmap/help02"/>
            <TextView
                style="@style/textView_help"
                android:text="关于资质"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_help03"
            style="@style/linearLayout_help"
            android:layout_marginTop="10dp">
            <ImageView
                style="@style/imageView_help"
                android:src="@mipmap/help03"/>
            <TextView
                style="@style/textView_help"
                android:text="操作手册"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_help04"
            style="@style/linearLayout_help">
            <ImageView
                style="@style/imageView_help"
                android:src="@mipmap/help04"/>
            <TextView
                style="@style/textView_help"
                android:text="常见问题"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_help05"
            style="@style/linearLayout_help">
            <ImageView
                style="@style/imageView_help"
                android:src="@mipmap/help05"/>
            <TextView
                style="@style/textView_help"
                android:text="客户服务"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_help06"
            style="@style/linearLayout_help">
            <ImageView
                style="@style/imageView_help"
                android:src="@mipmap/help06"/>
            <TextView
                style="@style/textView_help"
                android:text="意见反馈"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_help07"
            style="@style/linearLayout_help"
            android:layout_marginTop="10dp">
            <ImageView
                style="@style/imageView_help"
                android:src="@mipmap/help07"/>
            <TextView
                style="@style/textView_help"
                android:text="版本信息"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="2">
            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/myshape03"
                android:text="安全退出"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
