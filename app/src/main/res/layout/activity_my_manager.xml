<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhongbang.sxb.managercenter.MyManagerActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellowLand"
        >
        <ImageView
            android:id="@+id/imageView_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/click" />
        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="管理中心"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_personData"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="个人资料"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/relativeLayout1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/img_top"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/relativeLayout2">
        <TextView
            android:id="@+id/tv1"
            android:text="我的消费"
            style="@style/textView_manager"/>
        <View
            style="@style/view_manager"/>
        <TextView
            android:id="@+id/tv2"
            android:text="我的收款"
            style="@style/textView_manager"/>
        <View
            style="@style/view_manager"/>
        <TextView
            android:id="@+id/tv3"
            android:text="我的收益"
            style="@style/textView_manager"/>
        <View
            style="@style/view_manager"/>
        <TextView
            android:id="@+id/tv4"
            android:text="下属查询"
            style="@style/textView_manager"/>
        <View
            style="@style/view_manager"/>
        <TextView
            android:id="@+id/tv5"
            android:text="帮助"
            style="@style/textView_manager"/>
    </LinearLayout>
    <ListView
    android:id="@+id/listView_bill"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/linearLayout1"
    android:layout_marginTop="5dp"
    android:cacheColorHint="#00000000" >
    </ListView>
    <include layout="@layout/loading_item2"
             android:layout_height="match_parent"
             android:layout_width="match_parent"
        />
</RelativeLayout>
