<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhongbang.sxb.account.BankconfirmActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellowLand" >
        <ImageView
            android:id="@+id/imageView_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/click" />
        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="银行卡信息"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:id="@+id/view01"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/relativeLayout_title"
        android:background="#FF909090" />
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />
        <RelativeLayout
            android:id="@+id/layout_bank_name"
            android:layout_width="match_parent"
            android:layout_height="50dp" >
            <EditText
                android:id="@+id/editText_name1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView2"
                android:background="@null"
                android:ems="10"
                android:hint="请输入您的姓名"
                android:textSize="16dp" >
            </EditText>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText_name1"
                android:layout_alignBottom="@+id/editText_name1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="姓        名"
                android:textColor="#000000"
                android:textSize="16dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:id="@+id/layout_bank_name2"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <EditText
                android:id="@+id/editText_bank_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textView1"
                android:background="@null"
                android:ems="10"
                android:hint="请输入银行卡号(15位以上)"
                android:textSize="16dp" >
            </EditText>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText_bank_number"
                android:layout_alignBottom="@+id/editText_bank_number"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="银行卡号"
                android:textColor="#000000"
                android:textSize="16dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />
        <RelativeLayout
            android:id="@+id/rela_xuanzheyinhang"
            android:layout_width="match_parent"
            android:layout_height="50dp" >
            <Spinner
                android:id="@+id/text_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/TextView01"
                android:background="@null"
                >
            </Spinner>
            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="所属银行"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/xiala2" />
        </RelativeLayout>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />
        <RelativeLayout
            android:id="@+id/layout_bank_city"
            android:layout_width="match_parent"
            android:layout_height="50dp" >
            <EditText
                android:id="@+id/editText_zhihang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/TextView02"
                android:background="@null"
                android:ems="10"
                android:hint="支行名称-例如:厦门市支行"
                android:textSize="16dp" >
                <requestFocus />
            </EditText>
            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="支        行"
                android:textColor="#000000"
                android:textSize="16dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f0f0f0"
            android:gravity="center_vertical"
            android:text="   开户地"
            android:textColor="#000000"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />
        <RelativeLayout
            android:id="@+id/rela_xuanzheshengfen"
            android:layout_width="match_parent"
            android:layout_height="50dp" >
            <TextView
                android:id="@+id/text_sheng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/TextView03"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="请选择省份"
                android:textSize="16dp" >
            </TextView>

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="省        份"
                android:textColor="#000000"
                android:textSize="16dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:id="@+id/rela_xuanzhedishi"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/text_shi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/TextView04"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="请选着地市"
                android:textSize="16dp" >
            </TextView>

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="地        市"
                android:textColor="#000000"
                android:textSize="16dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />
        <RelativeLayout
            android:id="@+id/text_weirenzhen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/image_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/prompt_not" />
            <TextView
                android:id="@+id/text_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image_confirm"
                android:gravity="center"
                android:text="未认证！(完善个人资料)" />
        </RelativeLayout>
        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:id="@+id/layout_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone" >

            <EditText
                android:id="@+id/editText_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/TextView05"
                android:background="@null"
                android:ems="10"
                android:hint="收款人姓名" >
                <requestFocus />
            </EditText>
            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editText_name"
                android:layout_alignBottom="@+id/editText_name"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="区        县"
                android:textColor="#000000"
                android:textSize="16dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e6e6e6" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rel_next"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/myshape03"
            android:text="下一步"
            android:textSize="15dp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <include
        layout="@layout/loading_item2"/>"
</RelativeLayout>
